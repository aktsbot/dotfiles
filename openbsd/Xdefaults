! $OpenBSD: dot.Xdefaults,v 1.3 2014/07/10 10:22:59 jasper Exp $

Xft.autohint: 0
Xft.antialias: 1
Xft.hinting: true
Xft.hintstyle: hintslight
Xft.dpi: 96
Xft.rgba: rgb
Xft.lcdfilter: lcddefault

! fixed is the one true font - use iso10646 for unicode characters
*font         : -misc-fixed-medium-r-semicondensed-*-13-*-*-*-*-*-iso10646-1

Xcursor.theme: pixelfun3

#include </home/akts/.colors/jellybeans>
XTerm.vt100.background:   bg
XTerm.vt100.foreground:   fg
XTerm.vt100.color0:      blk
XTerm.vt100.color8:      bblk
XTerm.vt100.color1:      red
XTerm.vt100.color9:      bred
XTerm.vt100.color2:      grn
XTerm.vt100.color10:     bgrn
XTerm.vt100.color3:      ylw
XTerm.vt100.color11:     bylw
XTerm.vt100.color4:      blu
XTerm.vt100.color12:     bblu
XTerm.vt100.color5:      mag
XTerm.vt100.color13:     bmag
XTerm.vt100.color6:      cyn
XTerm.vt100.color14:     bcyn
XTerm.vt100.color7:      wht
XTerm.vt100.color15:     bwht

! must load this file after loading the font in xset
XTerm*font: -misc-tamzen-medium-r-normal--14-101-100-100-c-70-iso8859-1
XTerm*boldFont: -misc-tamzen-bold-r-normal--14-101-100-100-c-70-iso8859-1

XTerm*loginShell:true
! remove the additional black border
XTerm*borderWidth            : 0
XTerm*internalBorder         : 5
! set TERM env variable to use 256 colors
XTerm*termName               : xterm-256color
! make alt key work normally
XTerm*vt100.metaSendsEscape  : true
! save ~10,000 lines of scrollback
XTerm*v100.saveLines         : 10240
! hide scrollbar
XTerm*vt100.scrollBar        : false
! terminal bell tells the window manager to raise urgent flag
XTerm*vt100.bellIsUrgent     : true
! no bold fonts - just use brighter colors
!XTerm*allowBoldFonts         : false
! pressing a key automatically scrolls to the bottom
XTerm*scrollKey              : true
! don't allow terminal to go fullscreen
XTerm*fullscreen             : never
! clicking a line selects only from the current word forward
XTerm*cutToBeginningOfLine   : false
! and don't include a trailing newline in the selection!
XTerm*cutNewline             : false
! some black magic to change what characters XTerm considers "word delimiters"
XTerm*charClass              : 33:48,36-47:48,58-59:48,61:48,63-64:48,95:48,126:48
! select word on two clicks
XTerm*on2Clicks              : word
! select whole line on three clicks
XTerm*on3Clicks              : line
! shift + left click to open selection in web browser
XTerm*VT100*Translations     : #override Shift : exec-formatted("chrome --enable-unveil '%t'", PRIMARY)
! prevent Vim from resizing xterm
XTerm*allowWindowOps	     : true

! ===== xidle
! drag pointer to bottom left corner to lock screen - south west
XIdle*position : sw
! and leave it there for one second.
XIdle*delay    : 1
! also lock screen after 5 minutes idle
XIdle*timeout  : 300

! ===== xlock
! actually turn the backlight off
XLock.dpmsoff     : 1
! plain white-on-black lock screen
XLock.description : off
XLock.echokeys    : off
XLock.info        :
XLock.background  : black
XLock.foreground  : white
XLock.mode        : blank
XLock.username    : username: 
XLock.password    : password: 
XLock.font        : -misc-tamzen-medium-r-normal--14-101-100-100-c-70-iso8859-1
XLock.planfont    : -misc-tamzen-medium-r-normal--14-101-100-100-c-70-iso8859-1

! ===== xclock
! digital clock in lower right-hand corner
XClock*analog      : false
XClock*twentyfour  : true
XClock*padding     : 0
XClock*geometry    : -2-2
XClock*render      : false
XClock*font        : -misc-fixed-bold-r-normal-*-13-*-*-*-*-*-iso10646-1
XClock*height      : 12
XClock*background  : dimgray
XClock*foreground  : white
XClock*borderWidth : 0
