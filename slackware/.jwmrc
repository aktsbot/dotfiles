<?xml version="1.0"?>
<JWM>

    <!-- The root menu. -->
    <RootMenu onroot="3">
        <Program icon="terminal.png" label="Terminal">terminator</Program>
        <Program icon="file-manager.png" label="File Manager">thunar</Program>
        <Program icon="www.png" label="Web Browser">firefox</Program>
        <Program icon="editor.png" label="Text Editor">geany</Program>
        <Separator/>
        <Include>exec: xdgmenumaker -n -i -f jwm</Include>
        <Separator />
        <Menu icon="folder.png" label="Screenshot">
            <Program label="Now" confirm="false">scrot '%Y-%m-%d--%s_$wx$h_scrot.png' -e 'mv $f /home/akts/Pictures/scrots/ &amp; geeqie /home/akts/Pictures/scrots/%Y-%m-%d--%s_$wx$h_scrot.png'</Program>
            <Program label="In 5 Seconds..." confirm="false">scrot -d 5 '%Y-%m-%d--%s_$wx$h_scrot.png' -e 'mv $f /home/akts/Pictures/scrots/ &amp; geeqie /home/akts/Pictures/scrots/%Y-%m-%d--%s_$wx$h_scrot.png'</Program>
            <Program label="In 10 Seconds..." confirm="false">scrot -d 10 '%Y-%m-%d--%s_$wx$h_scrot.png' -e 'mv $f /home/akts/Pictures/scrots/ &amp; geeqie /home/akts/Pictures/scrots/%Y-%m-%d--%s_$wx$h_scrot.png</Program>
            <Program label="Selected Area... (click &amp; drag mouse)" confirm="false">scrot -b -s '%Y-%m-%d--%s_$wx$h_scrot.jpg' -e 'mv $f /home/akts/Pictures/scrots/ &amp; geeqie /home/akts/Pictures/scrots/%Y-%m-%d--%s_$wx$h_scrot.jpg'</Program>
            <Program label="Selected Area delay 10... (click &amp; drag mouse)" confirm="false">scrot -b -d 10 -s '%Y-%m-%d--%s_$wx$h_scrot.jpg' -e 'mv $f /home/akts/Pictures/scrots/ &amp; geeqie /home/akts/Pictures/scrots/%Y-%m-%d--%s_$wx$h_scrot.jpg'</Program>
        </Menu>
        <Menu icon="folder.png" label="Preferences">
            <Program icon="utility.png" label="Change X settings">geany ~/.Xresources</Program>
            <Program icon="utility.png" label="Desktop Settings">geany ~/.ideskrc</Program>
            <Program icon="graphics.png" label="Choose Wallpaper">nitrogen</Program>
            <Menu icon="folder.png" label="JWM config">
                <Program icon="utility.png" label="Edit JWM config">geany ~/.jwmrc</Program>
                <Program icon="refresh.png" label="Refresh Menu">jwm -reload</Program>
                <Restart icon="restart.png" label="Restart JWM" />
            </Menu>
            <Program icon="themes.png" label="User Interface Settings">lxappearance</Program>
            <Program icon="utility.png" label="Window Properties">
                xprop | xmessage -file -
            </Program>
            <Program icon="utility.png" label="Window Information">
                xwininfo | xmessage -file -
            </Program>
        </Menu>
        <Program icon="lock.png" label="Lock Screen">
            slock
        </Program>
	<Program icon="quit.png" label="Exit">
            dmenu_exit.sh
        </Program>
    </RootMenu>

    <!-- Options for program groups. -->
    <Group>
        <Class>Conky</Class>
        <Option>nolist</Option>
        <Option>noborder</Option>
        <Option>notitle</Option>
        <Option>sticky</Option>
    </Group>
    <Group>
        <Class>VSCodium</Class>
		<Option>nodrag</Option>
    </Group>
    <!-- General classes -->
    <Group>
    	<Class>splashwindow</Class>
    	<Option>nolist</Option>
    	<Option>layer:above</Option>
    	<Option>nopager</Option>
    	<Option>nofocus</Option>
    </Group>
    <Group>
    	<Class>applet</Class>
    	<Option>layer:below</Option>
    	<Option>noborder</Option>
    	<Option>notitle</Option>
    	<Option>sticky</Option>
    	<Option>nolist</Option>
    	<Option>nopager</Option>
    </Group>
    <Group>		<Class>ontop</Class>		<Option>layer:above</Option>		</Group>
    <Group>		<Class>maximized</Class>	<Option>maximized</Option>		</Group>
    <Group>		<Class>fullscreen</Class>	<Option>fullscreen</Option>		</Group>
    <Group>		<Class>nolist</Class>		<Option>nolist</Option>			</Group>
    <Group>		<Class>noborder</Class>		<Option>noborder</Option>		</Group>
    <Group>		<Class>notitle</Class>		<Option>notitle</Option>		</Group>
    <Group>		<Class>sticky</Class>		<Option>sticky</Option>			</Group>

    <!-- 130630 joe added support disable flashing in tray, all apps -->
    <Group>
        <Option>tiled</Option>
        <Option>aerosnap</Option>
    	<Option>noturgent</Option>
    </Group>
    
    <Group>
	<Class>gtkdialog-splash</Class>
	<Option>nolist</Option>
	<!-- <Option>layer:above</Option> -->
	<Option>nofocus</Option>
    </Group>

    <!-- Tray at the bottom. -->
    <Tray x="0" y="-1" autohide="off" width="0" height="22">

        <TrayButton icon="linux.png" label="Menu" border="true">root:3</TrayButton>
        <TrayButton icon="windows.png" label="" popup="Show desktop">showdesktop</TrayButton>
        <TrayButton icon="www.png" label="" popup="Web Browser">exec: firefox</TrayButton>
        <TrayButton icon="terminal.png" label="" popup="Terminal">exec: terminator</TrayButton>
        <TrayButton icon="file-manager.png" label="" popup="File Manager">exec: thunar</TrayButton>
        <Pager />
        <TaskList maxwidth="230"/>
        <Swallow name="xload" width="48" height="84">
            xload -nolabel -bg "#202020" -fg green -hl "#888888"
        </Swallow>
        <Dock/>
        <Clock format="%I:%M %p"><Button mask="123">exec:yad-calendar</Button></Clock>

    </Tray>

    <!-- Visual Styles -->
    <WindowStyle decorations="flat">
        <Font>Play-9:bold</Font>
        <Width>2</Width>
        <Height>20</Height>
        <Corner>4</Corner>
	<Foreground>#aaaaaa</Foreground>
	<Background>#888888:#2B2B2B</Background>
        <Opacity>1.0</Opacity>
        <Active>
            <Foreground>white</Foreground>
            <Background>#3B3B3B:#0B0B0B</Background>
            <Opacity>1.0</Opacity>
        </Active>
    </WindowStyle>
    <TrayStyle decorations="motif">
        <Font>Play-9:bold</Font>
        <Foreground>yellow</Foreground>
	<Background>#111111</Background>
    </TrayStyle>
    <TrayButtonStyle>
        <Font>Play-9</Font>
	<Foreground>orange</Foreground>
	<Background>#303030:#111111</Background>
	<Active>
	    <Foreground>white</Foreground>
	    <Background>#404040:#222222</Background>
	</Active>
    </TrayButtonStyle>
    <ClockStyle>
        <Font>DS\-Digital-15:bold</Font>
        <Foreground>green</Foreground>
	<Background>#101010</Background>
    </ClockStyle>
    <TaskListStyle decorations="motif">
        <Font>Play-9</Font>
	<Active>
	    <Foreground>cyan</Foreground>
	    <Background>#202020:#404040</Background>
	    <Outline>#202020</Outline>
	</Active>
	<Foreground>#aaaaaa</Foreground>
	<Background>#303030:#111111</Background>
	<Outline>#111111</Outline>
    </TaskListStyle>
    <PagerStyle>
        <Foreground>#404040</Foreground>
	<Background>#303030</Background>
	<Active>
	    <Foreground>#555555</Foreground>
	    <Background>#666666</Background>
	</Active>
    </PagerStyle>
    <MenuStyle decorations="motif">
        <Font>Play-9</Font>
        <Foreground>white</Foreground>
	<Background>#333333</Background>
	<Active>
	    <Foreground>yellow</Foreground>
	    <Background>#8F4900:#111111</Background>
	</Active>
    </MenuStyle>
    <PopupStyle>
        <Font>Play-9</Font>
        <Outline>#303030</Outline>
	<Foreground>#888888</Foreground>
	<Background>#202020</Background>
    </PopupStyle>


    <!-- Path where icons can be found.
         IconPath can be listed multiple times to allow searching
         for icons in multiple paths.
      -->
    <IconPath>
        /home/akts/.icons/misc
    </IconPath>
    <IconPath>/usr/share/icons/elementary-xfce/emblems/32</IconPath>
    <IconPath>/usr/share/icons/elementary-xfce/apps/32</IconPath>
    <IconPath>/usr/share/icons/elementary-xfce/places/32</IconPath>
    <IconPath>/usr/share/icons/elementary-xfce/actions/32</IconPath>
    <IconPath>/usr/share/icons/elementary-xfce/devices/32</IconPath>
    <IconPath>/usr/share/icons/elementary-xfce/categories/32</IconPath>

    <IconPath>
        /usr/local/share/jwm
    </IconPath>

    <!-- Virtual Desktops -->
    <!-- Desktop tags can be contained within Desktops for desktop names. -->
    <Desktops width="3" height="1">
        <!-- Default background. Note that a Background tag can be
              contained within a Desktop tag to give a specific background
              for that desktop.
         -->
        <!-- <Background type="solid">#563002</Background> -->
    </Desktops>

    <!-- Double click speed (in milliseconds) -->
    <DoubleClickSpeed>400</DoubleClickSpeed>

    <!-- Double click delta (in pixels) -->
    <DoubleClickDelta>3</DoubleClickDelta>

    <!-- The focus model (sloppy or click) -->
    <FocusModel>click</FocusModel>

    <!-- The snap mode (none, screen, or border) -->
    <SnapMode distance="10">none</SnapMode>

    <!-- The move mode (outline or opaque) -->
    <MoveMode coordinates="off" delay="1000">opaque</MoveMode>

    <!-- The resize mode (outline or opaque) -->
    <ResizeMode coordinates="off">opaque</ResizeMode>

    <!-- Key bindings -->
    <Key key="Up">up</Key>
    <Key key="Down">down</Key>
    <Key key="Right">right</Key>
    <Key key="Left">left</Key>
    <Key key="h">left</Key>
    <Key key="j">down</Key>
    <Key key="k">up</Key>
    <Key key="l">right</Key>
    <Key key="Return">select</Key>
    <Key key="Escape">escape</Key>

    <Key mask="A" key="Tab">nextstacked</Key>
    <Key mask="AS" key="Tab">prevstacked</Key>
    <Key mask="A" key="F4">close</Key>
    <Key mask="4" key="#">desktop#</Key>
    <Key mask="CA" key="Right">rdesktop</Key>
    <Key mask="CA" key="Left">ldesktop</Key>
    <Key mask="CA" key="Up">udesktop</Key>
    <Key mask="CA" key="Down">ddesktop</Key>

    <!-- from puppylinux-->
    <Key mask="A" key="equal">maximize</Key>
    <Key mask="A" key="minus">minimize</Key>
    <Key mask="A" key="bracketleft">maxleft</Key>
    <Key mask="A" key="bracketright">maxright</Key>

    <Key mask="CA" key="t">exec:terminator</Key>
    <!-- i3 style keybinds -->
    <Key mask="4S" key="q">close</Key>
    <Key mask="4" key="q">close</Key>
    <Key mask="4S" key="r">restart</Key>
    <Key mask="4" key="d">exec:dmenu_run.sh</Key>
    <Key mask="4S" key="x">exec:dmenu_exit.sh</Key>
    <Key mask="4" key="Return">exec:terminator</Key>
    <Key mask="4" key="l">exec:slock</Key>
    <Key mask="4" key="f">exec:thunar</Key>
    <Key mask="4" key="m">exec:audacious</Key>
    <Key mask="4" key="w">exec:firefox</Key>
    <Key mask="4" key="b">exec:toggle-redshift</Key>

    <DefaultIcon>/home/akts/.icons/misc/item.png</DefaultIcon>

    <StartupCommand>
        jwm_startup.sh
    </StartupCommand>

</JWM>
