general {
        colors = true
        interval = 10
}

order += "load"
order += "battery 0"
order += "tztime local"

load {
    format = "%1min/%5min/%15min"
}

battery 0 {
	format = "%status %percentage"
	integer_battery_capacity = true
	last_full_capacity = true
	low_threshold = 15
	status_chr = "C"
	status_bat = "B"
	status_unk = "?"
	status_full = "F"
}

tztime local {
	format = "%Y-%m-%d %H:%M:%S"
}

