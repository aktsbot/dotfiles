general {
        colors = true
        interval = 10
}

order += "battery 0"
order += "tztime local"

battery 0 {
	format = "%status %percentage"
	integer_battery_capacity = true
	last_full_capacity = true
	low_threshold = 15
	status_chr = "C"
	status_bat = "B"
	status_unk = "?"
	status_full = "F"
}

tztime local {
	format = "%H:%M"
}

