# $HOME/.config/i3/config

# Please see https://i3wm.org/docs/userguide.html for a complete reference!
# This config file will use environmental variables such as $BROWSER and $TERMINAL.
# You can set these variables in ~/.profile or ~/.bash_profile if you have it as below:
#
# export BROWSER="firefox"
# export TERMINAL="st"

set $mod Mod4

font pango: Monospace 10
#font -misc-fixed-medium-r-semicondensed-*-13-*-*-*-*-*-iso10646-1

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
# set the $TERMINAL var in ~/.zprofile or ~/.profile
bindsym $mod+Return exec --no-startup-id $TERMINAL

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
#bindsym $mod+d exec --no-startup-id dmenu_run
bindsym $mod+d exec --no-startup-id /home/akts/bin/rofi_run.sh
bindsym $mod+Tab exec --no-startup-id rofi -show window

# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
# bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+backslash split h

# split in vertical orientation
bindsym $mod+minus split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

# I like fancy names for my workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# resize window (you can also use the mouse for that)
mode "resize" {
    # These bindings trigger as soon as you enter the resize mode

    # Pressing left will shrink the window’s width.
    # Pressing right will grow the window’s width.
    # Pressing up will shrink the window’s height.
    # Pressing down will grow the window’s height.
    bindsym j resize shrink width 10 px or 10 ppt
    bindsym k resize grow height 10 px or 10 ppt
    bindsym l resize shrink height 10 px or 10 ppt
    bindsym semicolon resize grow width 10 px or 10 ppt

    # same bindings, but for the arrow keys
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# set popups during fullscreen mode
popup_during_fullscreen smart

for_window [class="^.*"] borderpixel 1
#gaps inner 5
#gaps outer 3

# dwm suckless colors
set $col_black #101010
set $col_gray1 #222222
set $col_gray2 #444444
set $col_gray3 #bbbbbb
set $col_gray4 #eeeeee
set $col_cyan  #005577

# Layout colors 	    bord        bg            text           indicator (split)
client.focused 		    $col_cyan   $col_cyan     $col_gray4     $col_cyan
client.focused_inactive     $col_gray2  $col_gray1    $col_gray4     $col_gray4
client.unfocused 	    $col_gray2  $col_gray1    $col_gray4     $col_gray4
client.urgent 		    $col_cyan   $col_cyan     $col_gray4     $col_cyan
client.background 	    $col_gray1

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    i3bar_command i3bar -t 
    status_command i3status
    tray_output primary
    workspace_buttons yes 
    mode dock
    font pango:Monospace 10
    position top
    modifier None

    colors {
    	statusline $col_gray3
	background $col_black
	#		  <border>    <background>  <text>
	focused_workspace  $col_cyan  $col_cyan     $col_gray4
	active_workspace   $col_black $col_black    $col_gray3
	inactive_workspace $col_black $col_black    $col_gray3
	urgent_workspace   $col_cyan  $col_cyan     $col_gray4
    }
}

# startup applications
exec --no-startup-id redshift -o -l 0:0 -b 0.6 -t 6500:6500
exec --no-startup-id clipit
exec --no-startup-id nm-applet
exec --no-startup-id xrdb -load ~/.Xresources
exec --no-startup-id xset b off
exec --no-startup-id setxkbmap -option caps:escape
exec --no-startup-id xset r rate 250 25
exec --no-startup-id xsetroot -cursor_name left_ptr
exec --no-startup-id synclient VertEdgeScroll=1 HorizEdgeScroll=1 TapButton1=1 TapButton2=3  2>/dev/null
exec --no-startup-id syndaemon -i .5 -K -t -R -d
exec --no-startup-id compton -b --config ~/.config/compton.conf
exec --no-startup-id xfce4-power-manager
exec --no-startup-id nitrogen --restore
exec --no-startup-id thunar --daemon
exec --no-startup-id urxvtd -q -o -f
exec --no-startup-id dunst
exec --no-startup-id volumeicon
exec --no-startup-id unclutter
exec --no-startup-id xautolock -time 10 -locker "/home/akts/bin/lock.sh"

# keybinds for applications
#bindsym $mod+Shift+w exec --no-startup-id firefox
bindsym $mod+Shift+w exec --no-startup-id env GTK_THEME=Adwaita:light firefox
bindsym $mod+Shift+f exec --no-startup-id thunar
bindsym $mod+Shift+e exec --no-startup-id code
bindsym $mod+Shift+m exec --no-startup-id /opt/deadbeef/bin/deadbeef
bindsym $mod+x exec --no-startup-id /home/akts/bin/lock.sh
bindsym $mod+c exec --no-startup-id gsimplecal
bindsym $mod+Shift+Return exec --no-startup-id samedir
bindsym $mod+Shift+i exec --no-startup-id i3resize up
bindsym $mod+Shift+o exec --no-startup-id i3resize right
bindsym $mod+Shift+y exec --no-startup-id i3resize left
bindsym $mod+Shift+u exec --no-startup-id i3resize down

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound
bindsym XF86AudioMicMute  exec --no-startup-id pactl set-source-mute 1 toggle # mute mic

# open certain windows in floating mode
for_window [class="(?i)lxappearance"] floating enable
for_window [class="(?i)xcalc"] floating enable
for_window [class="(?i)xfontsel"] floating enable
for_window [window_role="(?i)pop-up"] floating enable
for_window [class="(?i)Pidgin"] floating enable
for_window [class="(?i)transmission-gtk"] floating enable
for_window [class="^thunar" title="^File Operation Progress" instance="^Thunar"] floating enable
for_window [title="(?i)File Operation Progress"] floating enable
for_window [title="(?i)Library"] floating enable
for_window [class="(?i)pavucontrol"] floating enable
for_window [class="(?i)deadbeef"] floating enable
for_window [class="(?i)deluge"] floating enable
for_window [window_role="pop-up"] floating enable
for_window [title="(?i)Network Connections"] floating enable
for_window [class="(?i)gsimplecal"] floating enable

# app specific window tweaks
#for_window [class="^(?i)firefox"] border pixel 1
#for_window [class="^(?i)code"] border pixel 1
#for_window [class="^.*"] border pixel 2

# exit dialogue
set $mode_system System (e) xit, (s) uspend, (r) eboot, (p) oweroff
mode "$mode_system" {
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id ~/bin/lock.sh && systemctl suspend, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym p exec --no-startup-id systemctl poweroff, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Shift+x mode "$mode_system"

