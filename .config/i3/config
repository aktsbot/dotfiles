#667788 - indicator
client.focused $lgray $lgray #ffffff #2e9ef4 $lgray
client.unfocused $lgray3 $lgray2 #888888 $lgray2 $lgray2
client.focused_inactive $lgray3 $lgray3 #888888 $lgray3 $lgray3

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
  status_command i3status
  strip_workspace_numbers yes
  position top
  tray_output primary
  colors {
    background $gray

    statusline #aaaaaa
    inactive_workspace $gray $gray #aaaaaa
    active_workspace $gray $gray #ffffff
    urgent_workspace $red $red #ffffff
    focused_workspace #333333 #333333 #ffffff
    urgent_workspace $red $red #ffffff
  }
}

